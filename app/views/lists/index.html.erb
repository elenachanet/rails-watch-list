<div class="container">
  <h1 class="mt-4 mb-4">List of Movies</h1>

  <ul>
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%=list.name%></h5>
              <%= link_to 'More Details', list_path(list), class: 'btn btn-secondary mt-4'%>
            </div>
          </div>
      </div>
    <% end %>
    <%= link_to "Create a new list", new_list_path %>
  </ul>

</div>
